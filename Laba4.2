# Программный модуль: Скрытый слой сети

class HiddenLayer:
    def __init__(self, input_size, num_neurons, activation_function='threshold', threshold=0):
        self.neurons = [Neuron(input_size, activation_function, threshold) for _ in range(num_neurons)]

    def forward(self, inputs):
        return [neuron.forward(inputs) for neuron in self.neurons]

